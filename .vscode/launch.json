{
    "configurations": [
      {
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "name": "nodemon",
        "program": "${workspaceFolder}/server.js",
        "request": "launch",
        "restart": true,
        "runtimeExecutable": "/usr/local/bin/node",
        "skipFiles": ["<node_internals>/**"],
        "type": "node"
      }
    ]
  }